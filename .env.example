# ===================================================
# E-Commerce Docker Environment Configuration
# ===================================================
# Copy this file to .env and fill in your actual values
# IMPORTANT: .env is NOT committed to git for security

# ===================================================
# PostgreSQL
# ===================================================
POSTGRES_DB=ecommerce
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres123

# ===================================================
# RabbitMQ
# ===================================================
RABBITMQ_DEFAULT_USER=admin
RABBITMQ_DEFAULT_PASS=admin123

# ===================================================
# Redis
# ===================================================
# Redis doesn't require auth in this setup
# If you add Redis auth, configure here and in services

# ===================================================
# API Configuration
# ===================================================
ASPNETCORE_ENVIRONMENT=Development

# Database connection string for API (uses postgres service name)
DB_HOST=postgres
DB_PORT=5432
DB_NAME=ecommerce
DB_USER=postgres
DB_PASSWORD=postgres123

# Redis connection
REDIS_HOST=redis
REDIS_PORT=6379

# RabbitMQ connection
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_USER=admin
RABBITMQ_PASSWORD=admin123

# JWT Secrets (IMPORTANT: Change in production! Here are example values)
JWT_SECRET=8c93bcd0f70e519da0e5885b4a6aee02
JWT_ISSUER=ECommerceAPI
JWT_AUDIENCE=ECommerceClient

# Stripe (optional - leave empty for FakePaymentService)
STRIPE_SECRET_KEY=<Your_Stripe_Secret_Key_Here>
STRIPE_PUBLISHABLE_KEY=<Your_Stripe_Publishable_Key_Here>

# SendGrid Email Service
SENDGRID_API_KEY=<Your_SendGrid_API_Key_Here>
